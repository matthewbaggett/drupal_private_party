<?php
function tree_iterate($groups, $parent = null){
  $groups = array_values($groups);
  ob_start();
  ?>
  <?php
  foreach ($groups as $k => $group){
    ?>
    <li class="label group collapsed group_<?=$group->gid?>" rel="<?=$group->gid?>">
      <div class="icon"></div>
      <span class="name"><?=$group->get_name(); ?></span>
      <a class="edit_button" title="<?=t("Edit Group")?>" href="<?=url("admin/private_party/groups/edit/{$group->gid}")?>"></a>
      <div class="clear"></div>
    </li>
    <ul class="tree collapsed group_<?=$group->gid?>" rel="<?=$group->gid?>">
      <?=tree_iterate($group->get_children(), $group); ?>
      <?php foreach($group->get_users() as $user): ?>
        <?php if($user instanceof user_active_record): ?>
          <li class="user">
            <div class="icon"></div>
            <span class="name"><?=l($user->name, "admin/{$user->uid}/edit")?></span>
            <a class="remove" href="<?=url("admin/private_party/groups/remove_user_from_group/{$group->gid}/user/{$user->uid}")?>" title="<?=t("Remove user from Group")?>"></a>
            <div class="clear"></div>
          </li>
        <?php endif; ?>
      <?php endforeach; ?>
      <li class="add_user"><?=l("[" . t("Add User here") . "]", "admin/private_party/groups/add_user_to_group/{$group->gid}")?></li>
    </ul>
  <?php } ?>
  <?php if($parent): ?>
    <?php $child_of_gid = $parent->gid; ?>
  <?php else: ?>
    <?php $child_of_gid = 0; ?>
  <?php endif; ?>
  <li class="add"><?=l("[" . t("Add new Group here") . "]", "admin/private_party/groups/add_child_of/{$child_of_gid}"); ?></li>

  <?php
  $output = ob_get_contents();
  ob_end_clean();
  return $output;
}
